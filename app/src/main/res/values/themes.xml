<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.InterviewSimulator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_primary</item>
        <item name="colorPrimaryVariant">@color/button_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_primary</item>
        <item name="colorSecondaryVariant">@color/button_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/dark_background</item>
        
        <!-- Text colors -->
        <item name="android:textColor">@color/white</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.InterviewSimulator.Button</item>
    </style>

    <style name="Widget.InterviewSimulator.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>